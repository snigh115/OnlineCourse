@model StudentRegisteration.ViewModels.EnrollmentCourseDetailsViewModel

<div class="d-flex justify-content-center mt-5 ">
    <div class="shadow p-4 rounded-3">
        <div class="d-flex gap-4">
            <h1 class="mb-4"><span class="fw-bold">Student Name :</span>@Model.Name</h1>
        
            @if (!string.IsNullOrEmpty(Model.ProfilePicPath))
            {
                <img src="@Url.Content(Model.ProfilePicPath)" alt="Profile Pic" style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%;" />
            }
        </div>
        <p><strong>Roll Number :</strong> @Model.RollNumber</p>
        <div>
            <p><span class="fw-bold">Student Email : </span> @Model.Email</p>
            <p><span class="fw-bold">Nrc Number :</span> @Model.NrcNumber</p>
            <p><span class="fw-bold">Phone Number :</span> @Model.PhoneNumber</p>

            <hr/>

            <div>
                <h2>Course Information</h2>
                <p><strong>Academic Year:</strong> @Model.AcademicYear</p>
                <p><strong>Semester:</strong> @Model.Semester</p>
                
                <h4>Course Details</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Course Name</th>
                            <th>Mark</th>
                            <th>Passed</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < Model.CourseName.Count; i++)
                        {
                            <tr>
                                <td>@Model.CourseName[i]</td>
                                <td>@Model.Mark[i]</td>
                                <td>@(Model.IsPassed[i] != null ? Model.IsPassed[i].ToString() : "N/A")</td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>

            

            <div class="mt-4">
                <h4>Payment Information</h4>
                <p><strong>Payment Type:</strong>@Model.PaymentType</p>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Cost</th>
                            <th>Techanical Fees</th>
                            <th>Transition Fees</th>
                            <th>Total Cost</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.ActualCost <i>ks</i></td>
                            <td>@Model.TechnicalFee <i>ks</i></td>
                            <td>@Model.TransitionFee <i>ks</i></td>
                            <td>@Model.Cost <i>ks</i></td>
                        </tr>
                    </tbody>

                </table>
            </div>

            <div class="d-flex me-auto mt-5 justify-content-end">
                <p class="btn @(Model.Status == "Pending" ? "btn-warning  fw-light": Model.Status == "Approved" ? "btn-success" : Model.Status == "Rejected" ? "btn-danger":"")">@Model.Status</p>
            </div>
        </div>
    </div>
</div>


<a class="btn btn-outline-secondary" asp-area="" asp-controller="Admin" asp-action="Dashboard">Admin Dashboard </a>