

@model StudentRegisteration.ViewModels.StudentDetailsViewModel

<div class="container">
  <div class="row mb-4">
    <div class="col-md-12">
      <h1>Student Details</h1>
      <hr />
    </div>
  </div>

    <div class="row mb-3 d-flex align-items-center">
    <div class="col-md-1">
      @if (!string.IsNullOrEmpty(Model.ProfilePicPath))
      {
        <img src="@Url.Content(Model.ProfilePicPath)" alt="Profile Pic" style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%;" />
      }
    </div>
    <div class="col">
      <strong>Name:</strong> @Model.Name
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-2 col-lg-1 d-flex align-items-center">
      <strong>Phone Number:</strong>
    </div>
    <div class="col">
      @Model.PhoneNumber
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-2 col-lg-1 d-flex align-items-center">
      <strong>NRC Number:</strong>
    </div>
    <div class="col">
      @Model.NrcNumber
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-2 col-lg-1 d-flex align-items-center">
      <strong>Registration Number:</strong>
    </div>
    <div class="col">
      @Model.RegistrationDate.ToString("dd/MM/yyyy")
    </div>
  </div>

  @* <div class="row mb-3">
    <div class="col-md-2 col-lg-1 d-flex align-items-center">
      <strong>Enrollments:</strong>
    </div>
    <div class="col">
      @Model.Enrollments
    </div>
  </div> *@

  <div class="row mb-4">
    <div class="col-md-12">
      <h2>Address Information</h2>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-2 col-lg-1 d-flex align-items-center">
      <strong>State:</strong>
    </div>
    <div class="col">
      @Model.State
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-2 col-lg-1 d-flex align-items-center">
      <strong>City:</strong>
    </div>
    <div class="col">
      @Model.City
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-md-2 col-lg-1 d-flex align-items-center">
      <strong>Town:</strong>
    </div>
    <div class="col">
      @Model.Town
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-md-12">
      <h2>Student Pictures</h2>
    </div>
  </div>

  <div class="row mb-3">
  <div class="col-md-2 col-lg-1 d-flex align-items-center">
    <strong>NRC Front Pic:</strong>
  </div>
  <div class="col mr-auto">  @if (!string.IsNullOrEmpty(Model.NrcFrontPicPath))
    {
      <img src="@Model.NrcFrontPicPath" alt="NRC Front Pic" style="max-width: 200px; max-height: 200px;" class="img-thumbnail" />
    }
    else
    {
      <p>No NRC Front Pic uploaded.</p>
    }
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-2 col-lg-1 d-flex align-items-center">
    <strong>NRC Back Pic:</strong>
  </div>
  <div class="col mr-auto">  @if (!string.IsNullOrEmpty(Model.NrcBackPicPath))
    {
      <img src="@Url.Content(Model.NrcBackPicPath)" alt="NRC Back Pic" style="max-width: 200px; max-height: 200px;" class="img-thumbnail" />
    }
    else
    {
      <p>No NRC Back Pic uploaded.</p>
    }
  </div>
</div>


  
  <div class="row mt-4">
    <div class="col-md-6">
      <a asp-action="Create" asp-controller="Student" class="btn btn-primary">Edit</a>
    </div>
    <div class="col-md-6 text-end">
      <form id="deleteForm" asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <button type="button" onclick="confirmDelete()" class="btn btn-danger">Delete</button>
      </form>
    </div>
  </div>
</div>

<script>
  function confirmDelete() {
    if (confirm("Are you sure you want to delete this student?")) {
      document.getElementById("deleteForm").submit(); // Submit the form if confirmed
    }
  }
</script>
